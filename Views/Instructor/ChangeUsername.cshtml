@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ChangeUsername";
}



<div class="container" style="margin-top:10%;padding-left:15%;">

    <div style="padding:15px;border-radius:30px;background-color:rgba(191, 216, 216,0.5);width:780px;height:auto;">
        <div style="text-align:center;">
            <span style="color:rgb(28, 5, 87);font-size:x-large;font-family: cursive;">Change Username</span><br><br>

                 <form role="form" class="form-inline" method="post" action="/Instructor/ChangeU">

                <input type="text" name="username" placeholder="Old Username" class="form-control"><br><br>

                <input type="text" name="new_username" placeholder="New Username" class="form-control"><br><br>

                <input type="text" name="confirm_username" placeholder="Confirm Username" class="form-control"><br><br>

                <input type="submit" class="btn btn-info" value="Submit" />

            </form>
        </div>
    </div>
</div>