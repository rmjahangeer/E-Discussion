@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ViewResources";
}
@using project.Models;
@section Scripts
{
}
<div class="" style="margin-top:10%;padding-left:20%;">

    <div  style="padding:15px;border-radius:30px;background-color:rgba(191, 216, 216,0.5);width:780px;height:auto;">
        <div style="padding-left:18%;">
            <span style="color:rgb(28, 5, 87);font-size:x-large;margin-left:29%;font-family: cursive;">Resources</span><br><br>

            <table border="1" style="border-color:white;">

                <tr>
                    <td style="padding:8px;">
                        <span style="color:rgb(28, 5, 87);font-size:large;">
                            Class
                        </span>

                    </td>
                    <td style="padding:8px;">
                        <span style="color:rgb(28, 5, 87);font-size:large;">Category</span>
                    </td>

                    <td style="padding:8px;">
                        <span style="color:rgb(28, 5, 87);font-size:large;">Files</a></span>
                    </td>
                </tr>
                @foreach (Resource i in ViewBag.resource)
                {

                    <tr>
                        <td style="padding:8px;">
                            @foreach (SClass c in ViewBag.classlist)
                            {
                                if (i.Class_Id == c.Id)
                                {
                                    <span style="color:white;">@c.NameOfClass</span>
                                }
                            }

                        </td>
                        <td style="padding:8px;">
                            <span style="color:white;">@i.Category</span>
                        </td>

                        <td style="padding:8px;">
                            <span><a href="~/Files/@i.Data" style="color:white;" download>@i.Data</a></span>
                        </td>
                    </tr>

                }
            </table>


        </div>
    </div>

</div>
