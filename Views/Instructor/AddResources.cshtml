@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "AddResources";
}

<div class="container" style="margin-top:10%;padding-left:15%;">

    <div style="padding:15px;border-radius:30px;background-color:rgba(191, 216, 216,0.5);width:780px;height:auto;">
        <div style="padding-left:36%;">
            <span style="color:rgb(28, 5, 87);font-size:x-large;margin-left:-16px;font-family: cursive;">Add Resource to a Class</span><br><br>

            <form style="width:35%;" action="/Instructor/AddR" method="post" enctype="multipart/form-data">
                <input type="text" class="form-control" name="class" /><br />
                <select class="form-control" name="category">
                    <option value="">--Category--</option>
                    <option value="Labs">Labs</option>
                    <option value="Assignments">Assignments</option>
                    <option value="Lectures">Lectures</option>
                </select><br>
                <input type="file" class="form-control" name="FileUpload" /><br />
                <input type="submit" class="form-control btn-info" name="Submit" id="Submit" value="Upload" />
            </form>

        </div>
    </div>





</div>